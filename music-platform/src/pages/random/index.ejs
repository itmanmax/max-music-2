<!DOCTYPE html>
<html>
<head>
    <title>随机播放</title>
    <link rel="stylesheet" href="/css/global.css">
    <link rel="stylesheet" href="/random/random.css">
</head>
<body>
    <div id="loadingOverlay" class="loading-overlay">
        <div class="loading-content">
            <div class="loading-spinner"></div>
            <p class="loading-text">正在加载歌曲... 0/5</p>
        </div>
    </div>

    <div class="container">
        <!-- 左侧播放器 -->
        <div class="player-section">
            <a href="/home" class="back-button">
                <span class="back-icon">←</span>
                <span>返回</span>
            </a>
            
            <div class="player-info">
                <div class="cover-container">
                    <div class="cover-inner">
                        <img id="songCover" src="/images/default-cover.jpg" alt="封面">
                    </div>
                </div>
                <div class="song-info">
                    <h3 id="songName">加载中...</h3>
                    <p id="artistName">-</p>
                </div>
            </div>

            <div class="progress-container">
                <div id="progressBar" class="progress-bar">
                    <div id="progress" class="progress">
                        <div class="progress-handle"></div>
                    </div>
                </div>
                <div class="time-info">
                    <span id="currentTime">00:00</span>
                    <span id="duration">00:00</span>
                </div>
            </div>

            <div class="controls">
                <button onclick="playPrevious()" class="control-btn prev">
                    <i>⏮</i>
                </button>
                <button onclick="togglePlay()" class="control-btn play" id="playButton">
                    <i>▶</i>
                </button>
                <button onclick="playNext()" class="control-btn next">
                    <i>⏭</i>
                </button>
            </div>

            <audio id="audioPlayer"></audio>
        </div>

        <!-- 右侧播放列表 -->
        <div class="playlist-section">
            <div class="playlist-container"></div>
        </div>
    </div>

    <script src="/random/random.js"></script>
</body>
</html> 